<h1><%= @user.username %></h1>
<h2><%= @user.about_me %></h2>

<% if current_user == @user %>
    <%= link_to "Create a card", new_card_path %>
    <%= link_to "Edit your profile", edit_user_path %>
    <%= link_to "Logout", '/logout', method: :post %>
    <%= link_to "Delete account", delete_account_path(current_user), method: :post %>
<% end %>
<h1><%= link_to "CHECK MY CARDS", user_cards_url(@user) %></h1>
