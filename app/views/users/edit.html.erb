<%= form_for @user do |f| %>
    <%= f.label :username%><br>
    <%= f.text_field :username%><br>
    <%= f.label :about_me %><br>
    <%= f.text_area :about_me %><br>
    <%= f.label :password%><br>
    <%= f.password_field :password%><br>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %><br>
    <%= f.submit %>
<% end %>