<h1>Create a new card</h1>

<div>

<% @card.errors.full_messages.each do |message| %>
    <p class="error"><%= message %></p>
<% end %>
</div>

<%= form_for @card do |f| %>
        <%= f.label :youtube_link %>
        <%= f.text_field :youtube_link%><br>
        <%= f.label :codewars_link %>
        <%= f.text_field :codewars_link%><br>
        <%= f.label :article_link %>
        <%= f.text_field :article_link%><br>
        <%= f.label :question %>
        <%= f.text_field :question%><br>

        <%= f.fields_for :day, @day do |d| %> 
            <%= d.label :comment %>
            <%= d.text_field :comment %><br>
        <% end %>

        <%= f.submit %>

<% end %>