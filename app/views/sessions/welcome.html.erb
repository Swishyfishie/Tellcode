<h1>Welcome to 100DaysOfCode</h1>
<% if !session[:user_id] %>
  <p><%= link_to "Login", '/login', method: :get %></p>
  <p><%= link_to "Sign Up", '/users/new', method: :get %></p>
  <p><%= link_to 'Sign in with Github', '/auth/github'%>.</p>
<% else %>
<%= flash[:success] || flash[:error] %>
  <%= link_to "You should create your first day..." %>
    <%= link_to "Logout", '/logout', method: :post %>
<% end %>