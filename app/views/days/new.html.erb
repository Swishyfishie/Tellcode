<h1>Create a new day</h1>
<%= form_for @day do |f| %>
    <%= f.label :comment %>
    <%= f.text_field :comment %><br>

    <%= f.fields_for :days do |d| %>
        <%= d.label :youtube_link %>
        <%= d.text_field :youtube_link %>

        <%= d.label :codewars_link %>
        <%= d.text_field :codewars_link %>
       
        <%= d.label :article_link %>
        <%= d.text_field :article_link %>
       
        <%= d.label :question %>
        <%= d.text_field :question %>
    <% end %>
    <%= f.submit %>
<% end %>